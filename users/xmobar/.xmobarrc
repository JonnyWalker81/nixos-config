Config { font            = "xft:Ubuntu:weight=bold:pixelsize=13:antialias=true:hinting=true"
       , additionalFonts = [ "xft:Mononoki:weight=bold:pixelsize=13:antialias=true:hinting=true"
                           , "xft:Font Awesome 6 Free Solid:pixelsize=13:antialias=true:hinting=true"
                           , "xft:Font Awesome 6 Brands:pixelsize=13:antialias=true:hinting=true"
                           ]
       , bgColor      = "#2E3440"  -- Nord dark background
       , fgColor      = "#D8DEE9"  -- Nord foreground
       , position       = TopSize L 100 24
       , lowerOnStart = True
       , hideOnStart  = False
       , allDesktops  = True
       , persistent   = True
       , iconRoot     = ".xmonad/xpm/"
       , commands = [
                 -- Weather icon
                   Run Com "echo" ["<fn=2>\xf0c2</fn>"] "weathericon" 3600
                 -- Weather monitor
                 , Run Com "scripts/wttr.sh" [] "weather" 360
                 -- Cpu usage in percent
                 , Run Cpu ["-t", "<fn=2>\xf2db</fn>  cpu: (<total>%)","-H","50","--high","red"] 20
                 -- Ram used number and percent
                 , Run Memory ["-t", "<fn=2>\xf233</fn>  mem: <usedratio>%"] 20
                 -- Disk space free
                 , Run DiskU [("/", "<fn=2>\xf0c7</fn>  hdd: <free> free")] [] 60
                 -- Uptime icon
                 , Run Com "echo" ["<fn=2>\xf0aa</fn>"] "uparrow" 3600
                 -- Uptime
                 , Run Uptime ["-t", "uptime: <days>d <hours>h"] 360
                 -- Time and date icon
                 , Run Com "echo" ["<fn=2>\xf017</fn>"] "dateicon" 3600
                 -- Time and date (local and UTC)
                 , Run Com "/home/cipher/nixos-config/scripts/xmobar-datetime.sh" [] "date" 50
                 -- Prints out the left side items such as workspaces, layout, etc.
                 , Run UnsafeStdinReader
                 ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %UnsafeStdinReader% }{ <box type=Bottom width=2 mb=2 color=#88C0D0><fc=#88C0D0>%weathericon%  %weather%</fc></box>    <box type=Bottom width=2 mb=2 color=#A3BE8C><fc=#A3BE8C>%cpu%</fc></box>    <box type=Bottom width=2 mb=2 color=#81A1C1><fc=#81A1C1>%memory%</fc></box>    <box type=Bottom width=2 mb=2 color=#B48EAD><fc=#B48EAD>%disku%</fc></box>    <box type=Bottom width=2 mb=2 color=#8FBCBB><fc=#8FBCBB>%uparrow%  %uptime%</fc></box>    <box type=Bottom width=2 mb=2 color=#A3BE8C><fc=#A3BE8C>%dateicon%  %date%</fc></box> "
       }
